# Copy to .env and fill in your values. Never commit .env itself.

# ── Your environment ──────────────────────────────────────────
DOMAIN="example.com"
NAS_IP="192.168.1.100"
NAS_HTPC_PATH="/mnt/nas/media"
NAS_IMMICH_PATH="/mnt/nas/photos"
ACME_EMAIL="you@example.com"

# NODE_NAME must match your host's short hostname (k3s uses it as the node name).
# Set the full hostname in combustion/script before OS install.
NODE_NAME="k3s-node"

# ── GitHub ────────────────────────────────────────────────────
GITHUB_USER="your-github-username"
GITHUB_REPO="k3s-cluster"
GITHUB_TOKEN="ghp_xxxxxxxxxxxxxxxxxxxx"

# ── Porkbun DNS (for Let's Encrypt DNS-01 challenge) ─────────
PORKBUN_API_KEY="pk1_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
PORKBUN_SECRET_KEY="sk1_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
